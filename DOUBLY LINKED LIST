#include <stdio.h>
#include <stdlib.h>

struct Node {
    int data;
    struct Node* next;
    struct Node* prev;
};

struct Node* head = NULL;

struct Node* CreateNode(int value) {
    struct Node* newNode = (struct Node*)malloc(sizeof(struct Node));
    newNode->data = value;
    newNode->next = NULL;
    newNode->prev = NULL;
    return newNode;
}

void InsertAtBeginning(int value) {
    struct Node* newNode = CreateNode(value);
    if (head == NULL) {
        head = newNode;
    } else {
        newNode->next = head;
        head->prev = newNode;
        head = newNode;
    }
    printf("%d has been added at the beginning of the list.\n", value);
}

void InsertAtPosition(int value, int pos) {
    if (pos == 1) {
        InsertAtBeginning(value);
        return;
    }
    struct Node* temp = head;
    int k = 1;
    while (k < pos - 1 && temp != NULL) {
        temp = temp->next;
        k++;
    }
    if (temp == NULL) {
        printf("Oops! Position out of range.\n");
        return;
    }
    struct Node* newNode = CreateNode(value);
    newNode->next = temp->next;
    newNode->prev = temp;
    if (temp->next != NULL) {
        temp->next->prev = newNode;
    }
    temp->next = newNode;
    printf("%d has been inserted at position %d.\n", value, pos);
}

void InsertAtEnd(int value) {
    struct Node* newNode = CreateNode(value);
    if (head == NULL) {
        head = newNode;
    } else {
        struct Node* temp = head;
        while (temp->next != NULL) {
            temp = temp->next;
        }
        temp->next = newNode;
        newNode->prev = temp;
    }
    printf("%d has been added at the end of the list.\n", value);
}

void DeleteAtBeginning() {
    if (head == NULL) {
        printf("The list is empty. Nothing to delete.\n");
        return;
    }
    struct Node* temp = head;
    head = head->next;
    if (head != NULL) head->prev = NULL;
    printf("Deleted %d from the beginning of the list.\n", temp->data);
    free(temp);
}

void DeleteByValue(int value) {
    if (head == NULL) {
        printf("The list is empty. Nothing to delete.\n");
        return;
    }
    struct Node* temp = head;
    while (temp != NULL && temp->data != value) {
        temp = temp->next;
    }
    if (temp == NULL) {
        printf("Could not find %d in the list.\n", value);
        return;
    }
    if (temp->prev != NULL)
        temp->prev->next = temp->next;
    else
        head = temp->next;

    if (temp->next != NULL)
        temp->next->prev = temp->prev;

    printf("Deleted %d from the list.\n", value);
    free(temp);
}

void DeleteAtPosition(int pos) {
    if (head == NULL) {
        printf("The list is empty. Nothing to delete.\n");
        return;
    }
    struct Node* temp = head;
    int k = 1;
    while (temp != NULL && k < pos) {
        temp = temp->next;
        k++;
    }
    if (temp == NULL) {
        printf("Oops! Position %d does not exist.\n", pos);
        return;
    }
    if (temp->prev != NULL)
        temp->prev->next = temp->next;
    else
        head = temp->next;

    if (temp->next != NULL)
        temp->next->prev = temp->prev;

    printf("Deleted node at position %d (value: %d).\n", pos, temp->data);
    free(temp);
}

void DeleteAtEnd() {
    if (head == NULL) {
        printf("The list is empty. Nothing to delete.\n");
        return;
    }
    struct Node* temp = head;
    while (temp->next != NULL) temp = temp->next;
    if (temp->prev != NULL)
        temp->prev->next = NULL;
    else
        head = NULL;
    printf("Deleted %d from the end of the list.\n", temp->data);
    free(temp);
}

void Search(int value) {
    if (head == NULL) {
        printf("The list is empty.\n");
        return;
    }
    struct Node* temp = head;
    int pos = 1;
    while (temp != NULL) {
        if (temp->data == value) {
            printf("Found %d at position %d.\n", value, pos);
            return;
        }
        temp = temp->next;
        pos++;
    }
    printf("%d is not in the list.\n", value);
}

void Display() {
    if (head == NULL) {
        printf("The list is empty.\n");
        return;
    }
    struct Node* temp = head;
    printf("Forward: ");
    while (temp->next != NULL) {
        printf("%d ", temp->data);
        temp = temp->next;
    }
    printf("%d\n", temp->data);

    printf("Backward: ");
    while (temp != NULL) {
        printf("%d ", temp->data);
        temp = temp->prev;
    }
    printf("\n");
}

void FreeList() {
    struct Node* temp = head;
    while (temp != NULL) {
        struct Node* next = temp->next;
        free(temp);
        temp = next;
    }
}

int main() {
    int choice, value, pos;
    while (1) {
        printf("\n--- Doubly Linked List Menu ---\n");
        printf("1. Add at Beginning\n");
        printf("2. Add at Position\n");
        printf("3. Add at End\n");
        printf("4. Delete from Beginning\n");
        printf("5. Delete by Value\n");
        printf("6. Delete from Position\n");
        printf("7. Delete from End\n");
        printf("8. Search for Value\n");
        printf("9. Show List\n");
        printf("10. Exit\n");
        printf("Choose an option: ");
        scanf("%d", &choice);

        switch(choice) {
            case 1:
                printf("Enter number to add: ");
                scanf("%d", &value);
                InsertAtBeginning(value);
                break;
            case 2:
                printf("Enter number to add: ");
                scanf("%d", &value);
                printf("Enter position: ");
                scanf("%d", &pos);
                InsertAtPosition(value, pos);
                break;
            case 3:
                printf("Enter number to add: ");
                scanf("%d", &value);
                InsertAtEnd(value);
                break;
            case 4:
                DeleteAtBeginning();
                break;
            case 5:
                printf("Enter number to delete: ");
                scanf("%d", &value);
                DeleteByValue(value);
                break;
            case 6:
                printf("Enter position to delete: ");
                scanf("%d", &pos);
                DeleteAtPosition(pos);
                break;
            case 7:
                DeleteAtEnd();
                break;
            case 8:
                printf("Enter number to search for: ");
                scanf("%d", &value);
                Search(value);
                break;
            case 9:
                Display();
                break;
            case 10:
                FreeList();
                printf("Goodbye have a nice day!\n");
                exit(0);
            default:
                printf("Invalid choice, try again.\n");
        }
    }
}
